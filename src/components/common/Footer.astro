---
import Logo from "./Logo.astro";
import { socialMedia } from "../../data/socialmedia";
import { getEntries } from "@/lib/contentful";
import { adaptPortfolioCase, adaptService } from "@/lib/contentful-adapters";

// Check for preview cookie
const isPreview = Astro.cookies.get("contentful_preview")?.value === "true";

// Fetch 4 recent cases
const caseEntries = await getEntries(
  "portfolioCase",
  {
    order: "fields.order",
    limit: 4,
  },
  isPreview,
);
const footerCases = caseEntries.items.map(adaptPortfolioCase);

// Fetch 4 recent services
const serviceEntries = await getEntries(
  "service",
  {
    order: "fields.order",
    limit: 4,
  },
  isPreview,
);
const footerServices = serviceEntries.items.map(adaptService);

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-top">
    <div class="container">
      <div class="footer-grid">
        <!-- Columna 1: Brand & Bio -->
        <div class="footer-col brand-col">
          <a href="/" class="footer-logo-link" aria-label="Zutra - Inicio">
            <Logo class="footer-logo" />
          </a>
          <p class="footer-bio">
            Impulsamos negocios con <strong>código moderno</strong>, <strong
              >diseño con carácter</strong
            > y <strong>sistemas que venden</strong>. Sin humo, solo ejecución
            técnica desde Chile para el mundo.
          </p>
          <div class="footer-socials">
            {
              socialMedia.map((social) => (
                <a
                  href={social.url}
                  aria-label={social.ariaLabel}
                  class="social-link"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class={social.icon} />
                </a>
              ))
            }
          </div>
        </div>

        <!-- Columna 2: Servicios -->
        <div class="footer-col">
          <h3 class="footer-heading">Servicios</h3>
          <ul class="footer-links">
            {
              footerServices.map((service) => (
                <li>
                  <a href={`/servicios/${service.slug}`}>{service.title}</a>
                </li>
              ))
            }
            <li><a href="/servicios" class="link-view-all">Ver todos →</a></li>
          </ul>
        </div>

        <!-- Columna 3: Portfolio -->
        <div class="footer-col">
          <h3 class="footer-heading">Casos de Éxito</h3>
          <ul class="footer-links">
            {
              footerCases.map((caso) => (
                <li>
                  <a href={`/portfolio/${caso.slug}`}>{caso.title}</a>
                </li>
              ))
            }
            <li>
              <a href="/portfolio" class="link-view-all">Ver portfolio →</a>
            </li>
          </ul>
        </div>

        <!-- Columna 4: Agencia -->
        <div class="footer-col">
          <h3 class="footer-heading">Agencia</h3>
          <ul class="footer-links">
            <li><a href="/nosotros">Nosotros</a></li>
            <li><a href="/#metodo">Nuestro Método</a></li>
            <li><a href="/blog">Blog Valiente</a></li>
            <li><a href="/#contacto">Contacto</a></li>
            <li><a href="/privacidad">Privacidad</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-inner">
        <p class="copyright">
          &copy; {currentYear} Zutra. Todos los derechos reservados.
        </p>
        <p class="location">
          <i class="ph-duotone ph-map-pin"></i> Puente Alto, Santiago de Chile
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary);
    border-top: 1px solid var(--color-line);
    padding-top: clamp(4rem, 10vw, 6rem);
    position: relative;
    z-index: 10;
    overflow: hidden;
  }

  .footer-top {
    padding-bottom: clamp(3rem, 8vw, 5rem);
    position: relative;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: clamp(2.5rem, 5vw, 4rem);
  }

  /* Brand Column */
  .brand-col {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-logo-link {
    color: var(--color-accent);
    display: flex;
    align-items: center;
    transition: transform 0.3s ease;
  }

  .footer-logo-link:hover {
    transform: scale(1.05);
  }

  :global(.footer-logo) {
    height: 2rem !important;
    width: auto !important;
    color: inherit;
  }

  .footer-bio {
    color: var(--color-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    max-width: 32ch;
  }

  .footer-socials {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .social-link {
    width: 2.75rem;
    height: 2.75rem;
    border-radius: var(--radius-lg);
    background: var(--color-subtle);
    border: 1px solid var(--color-line);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: var(--color-muted);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .social-link:hover {
    background: var(--color-accent);
    color: var(--color-on-accent);
    border-color: var(--color-accent);
    transform: translateY(-5px) rotate(8deg);
  }

  /* Typography & Links */
  .footer-heading {
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-secondary);
    margin-bottom: 2rem;
    position: relative;
    padding-left: 1rem;
    opacity: 0.9;
  }

  .footer-heading::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-links a {
    color: var(--color-muted);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .footer-links a:hover {
    color: var(--color-accent);
    transform: translateX(4px);
  }

  .link-view-all {
    color: var(--color-accent) !important;
    font-weight: 800 !important;
    font-size: 0.8rem !important;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 0.5rem;
  }

  /* Bottom Bar */
  .footer-bottom {
    padding: 2.5rem 0;
    border-top: 1px solid var(--color-line);
    /* background-color: color-mix(in srgb, var(--color-primary), black 20%); */
  }

  .footer-bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .copyright,
  .location {
    color: var(--color-muted);
    font-size: 0.85rem;
    margin: 0;
    font-weight: 500;
  }

  .location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .location i {
    color: var(--color-accent);
    font-size: 1.125rem;
  }

  /* Responsive "Onda" */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }

    .brand-col {
      grid-column: span 2;
      align-items: center;
      text-align: center;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--color-line);
    }

    .footer-bio {
      max-width: 45ch;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding-top: 4rem;
    }

    .footer-grid {
      grid-template-columns: 1fr 1fr; /* 2 columns on mobile for better space use */
      gap: 3rem 1.5rem;
    }

    .brand-col {
      grid-column: span 2;
    }

    .footer-heading {
      margin-bottom: 1.25rem;
      font-size: 0.65rem;
    }

    .footer-links a {
      font-size: 0.85rem;
    }

    .footer-bottom-inner {
      flex-direction: column;
      text-align: center;
      gap: 1.25rem;
    }

    .location {
      justify-content: center;
    }
  }

  /* Especial Case for very small screens */
  @media (max-width: 400px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
    .brand-col {
      grid-column: span 1;
    }
  }
</style>
