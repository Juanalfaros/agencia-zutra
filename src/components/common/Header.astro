---
// src/components/common/Header.astro
import { navLinks } from "../../data/navigation";
import ToggleTheme from "../ui/ToggleTheme.astro";
import Logo from "./Logo.astro";
---

<header id="header" class="header">
  <div class="container header__container">
    <div class="header__inner">
      <a href="/" aria-label="Inicio Zutra" class="header__logo-link">
        <Logo class="header__logo-svg" />
      </a>

      <nav class="header__nav--desktop" aria-label="Principal">
        {
          navLinks.map((link) => {
            const isActive =
              Astro.url.pathname === link.href ||
              (link.href === "/portfolio" &&
                Astro.url.pathname.startsWith("/portfolio"));
            return (
              <a href={link.href} class={isActive ? "active" : ""}>
                <span class="nav-text">{link.text}</span>
                <span class="nav-indicator" />
              </a>
            );
          })
        }
      </nav>

      <div class="header__right">
        <div class="header__cta-container">
          <a
            href="/#contacto"
            class="header-button"
            data-track="cta_header_click"
            data-loc="header"
          >
            <span>Auditoría</span>
            <i class="ph-duotone ph-arrow-right"></i>
          </a>
        </div>

        <ToggleTheme />

        <button
          id="menu-btn"
          class="header__menu-btn"
          aria-label="Abrir menú"
          aria-expanded="false"
        >
          <div class="hamburger">
            <span></span>
            <span></span>
          </div>
        </button>
      </div>
    </div>
  </div>

  <div id="m-nav" class="mobile-menu" aria-hidden="true">
    <div class="mobile-menu__overlay"></div>
    <div class="mobile-menu__content">
      <button
        id="menu-close-btn"
        class="mobile-menu__close"
        aria-label="Cerrar menú"
      >
        <i class="ph-bold ph-x"></i>
      </button>
      <nav class="mobile-menu__nav">
        {
          navLinks.map((link, index) => (
            <a
              href={link.href}
              class="mobile-menu__link"
              style={`animation-delay: ${0.1 * index}s`}
            >
              <span class="link-number">0{index + 1}</span>
              <span class="link-label">{link.text}</span>
            </a>
          ))
        }
      </nav>
      <div class="mobile-menu__footer">
        <a href="/#contacto" class="button button--primary full-width">
          Empezar proyecto
        </a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1.5rem 0;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .header.scrolled {
    padding: 0.75rem 0;
  }

  /* Island Container Effect */
  .header__container {
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .header.scrolled .header__container {
    max-width: 1300px;
    padding: 0 1rem;
  }

  @media (max-width: 768px) {
    .header {
      padding: 1rem 0;
    }
    .header.scrolled {
      padding: 0.5rem 0;
    }
    .header.scrolled .header__container {
      padding: 0 0.75rem;
    }
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1.25rem;
    border-radius: var(--radius-full);
    background-color: transparent;
    border: 1px solid transparent;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (max-width: 768px) {
    .header__inner {
      padding: 0.5rem 1rem;
    }
  }

  .header.scrolled .header__inner {
    background-color: color-mix(in srgb, var(--color-surface), transparent 15%);
    border: 1px solid var(--color-line);
  }

  :global([data-theme="light"]) .header.scrolled .header__inner {
    background-color: color-mix(in srgb, var(--color-surface), transparent 10%);
  }

  /* Logo */
  .header__logo-link {
    color: var(--color-accent);
    transition: transform 0.3s ease;
    display: flex;
    align-items: center;
  }

  :global(.header__logo-svg) {
    height: 2rem !important;
    width: auto !important;
    color: inherit;
  }

  .header.scrolled :global(.header__logo-svg) {
    height: 1.8rem !important;
    padding-left: 1rem;
    margin-bottom: 5px;
  }

  /* Desktop Nav */
  .header__nav--desktop {
    display: none;
    align-items: center;
    gap: 0.5rem;
  }

  .header__nav--desktop a {
    position: relative;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-muted);
    transition: all 0.3s ease;
    border-radius: var(--radius-full);
  }

  .header__nav--desktop a:hover {
    color: var(--color-secondary);
  }

  .header__nav--desktop a.active {
    color: var(--color-accent);
    background-color: var(--color-accent-subtle);
  }

  .nav-indicator {
    position: absolute;
    bottom: 0px;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 20px;
    height: 2px;
    background: var(--color-accent);
    border-radius: var(--radius-sm);
    transition: transform 0.3s ease;
  }

  .header__nav--desktop a.active .nav-indicator {
    transform: translateX(-50%) scaleX(1);
    bottom: 4px;
  }

  /* Right Side */
  .header__right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header__cta-container {
    display: none;
  }

  .header-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.25rem;
    background-color: var(--color-secondary);
    color: var(--color-primary);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 800;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .header-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(var(--color-accent-rgb), 0.2);
    background-color: var(--color-accent);
  }

  .header-button i {
    font-size: 1rem;
  }

  /* Hamburger Menu btn */
  .header__menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-secondary);
    padding: 0;
  }

  .hamburger {
    position: relative;
    width: 1.5rem;
    height: 0.75rem;
  }

  .hamburger span {
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: currentColor;
    transition: all 0.3s ease;
  }

  .hamburger span:first-child {
    top: 0;
  }
  .hamburger span:last-child {
    bottom: 0;
    width: 70%;
    left: 30%;
  }

  .header__menu-btn[aria-expanded="true"] .hamburger span:first-child {
    transform: translateY(5px) rotate(45deg);
  }

  .header__menu-btn[aria-expanded="true"] .hamburger span:last-child {
    transform: translateY(-5px) rotate(-45deg);
    width: 100%;
    left: 0;
  }

  /* Mobile Menu Overlay */
  .mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 999;
    visibility: hidden;
    pointer-events: none;
    transition: visibility 0.4s;
  }

  .mobile-menu.active {
    visibility: visible;
    pointer-events: auto;
  }

  .mobile-menu__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(var(--color-primary-rgb, 0, 0, 0), 0.8);
    backdrop-filter: blur(10px);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .mobile-menu.active .mobile-menu__overlay {
    opacity: 1;
  }

  .mobile-menu__content {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    max-width: 400px;
    background: var(--color-surface);
    padding: 8rem 2rem 2rem;
    transform: translateX(100%);
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    display: flex;
    flex-direction: column;
    box-shadow: -10px 0 40px rgba(0, 0, 0, 0.3);
  }

  .mobile-menu__close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-subtle);
    border: 1px solid var(--color-line);
    border-radius: var(--radius-full);
    color: var(--color-secondary);
    font-size: 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .mobile-menu__close:hover {
    background: var(--color-accent);
    color: var(--color-on-accent);
    transform: rotate(90deg);
  }

  .mobile-menu.active .mobile-menu__content {
    transform: translateX(0);
  }

  .mobile-menu__nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: auto;
  }

  .mobile-menu__link {
    display: flex;
    align-items: baseline;
    gap: 1.5rem;
    padding: 1rem 0;
    color: var(--color-secondary);
    text-decoration: none;
    border-bottom: 1px solid var(--color-line);
    opacity: 0;
    transform: translateY(20px);
  }

  .mobile-menu.active .mobile-menu__link {
    animation: slideIn 0.5s forwards cubic-bezier(0.16, 1, 0.3, 1);
  }

  .link-number {
    font-size: 0.75rem;
    font-weight: 800;
    color: var(--color-accent);
    font-family: monospace;
  }

  .link-label {
    font-size: 2rem;
    font-weight: 900;
    transition: transform 0.3s ease;
  }

  .mobile-menu__link:hover .link-label {
    transform: translateX(10px);
    color: var(--color-accent);
  }

  .mobile-menu__footer {
    padding-top: 2rem;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 768px) {
    .header__nav--desktop {
      display: flex;
    }
    .header__menu-btn {
      display: none;
    }
    .header__cta-container {
      display: block;
    }
  }

  :global(body.menu-open) {
    overflow: hidden;
  }
</style>
