---
import type { ZutraCaseStudy, TeamMember } from "@/types/project-types";

interface Props {
    project: ZutraCaseStudy;
}

const { project } = Astro.props;
---

<section class="case-key-info">
    <div class="container">
        <div class="info-grid">
            <div class="info-item">
                <span class="info-label">Rol</span>
                <p class="info-value">{project.role}</p>
            </div>
            {
                project.duration && (
                    <div class="info-item">
                        <span class="info-label">Duraci√≥n</span>
                        <p class="info-value">{project.duration}</p>
                    </div>
                )
            }
            <div class="info-item">
                <span class="info-label">Contexto</span>
                <p class="info-value">{project.context}</p>
            </div>
            {
                project.team && project.team.length > 0 && (
                    <div class="info-item">
                        <span class="info-label">Equipo</span>
                        <div class="team-list">
                            {project.team.map((member: TeamMember) => (
                                <div class="team-member">
                                    <span class="member-name">
                                        {member.name}
                                    </span>
                                    <span class="member-role">
                                        {member.role}
                                    </span>
                                </div>
                            ))}
                        </div>
                    </div>
                )
            }
            {
                project.websiteUrl && (
                    <div class="info-item">
                        <span class="info-label">Visitar</span>
                        <a
                            href={project.websiteUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="visit-link"
                        >
                            {new URL(project.websiteUrl).hostname}{" "}
                            <i class="ph ph-arrow-square-out" />
                        </a>
                    </div>
                )
            }
        </div>
    </div>
</section>

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .case-key-info {
        padding: 4rem 0;
        background: var(--color-primary);
        border-bottom: 1px solid var(--color-line);
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .info-label {
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        color: var(--color-accent);
        letter-spacing: 0.12em;
    }

    .info-value {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-secondary);
    }

    .team-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .team-member {
        display: flex;
        flex-direction: column;
    }

    .member-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-secondary);
    }

    .member-role {
        font-size: 0.85rem;
        color: var(--color-muted);
    }

    .visit-link {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--color-accent);
        text-decoration: none;
        transition: all 0.3s;
    }

    .visit-link:hover {
        transform: translateY(-2px);
        opacity: 0.8;
    }
</style>
