---
import { getEntries } from "@/lib/contentful";
import { adaptPortfolioCase } from "@/lib/contentful-adapters";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { getTechIcon } from "../../data/techIcons";
import type { ZutraCaseStudy } from "@/types/project-types";

// Check for preview cookie
const isPreview = Astro.cookies.get("contentful_preview")?.value === "true";

// Fetch portfolio cases from Contentful
const entries = await getEntries(
	"portfolioCase",
	{
		order: "fields.order",
		limit: 6,
	},
	isPreview,
);
const sortedCases = entries.items.map(adaptPortfolioCase);
---

<section id="casos" class="section">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title">Portfolio de Casos</h2>
		</div>
		<div class="portfolio-grid">
			{
				sortedCases.map((project: ZutraCaseStudy) => (
					<a href={`/portfolio/${project.slug}`} class="project-card">
						<div class="project-image-wrapper">
							<Image
								src={project.featuredImage.src}
								alt={project.title}
								width={800}
								height={600}
								class="project-image"
								transition:name={`image-${project.slug}`}
							/>
							<div class="project-overlay">
								<span class="view-project-btn">
									Ver Caso{" "}
									<i class="ph-duotone ph-arrow-right" />
								</span>
							</div>
						</div>
						<div class="project-content">
							<div class="project-meta">
								<span class="project-industry">
									{project.industry}
								</span>
								<span class="project-year">{project.year}</span>
							</div>
							<h3
								class="project-title"
								transition:name={`title-${project.slug}`}
							>
								{project.title}
							</h3>
							<p class="project-desc">{project.description}</p>
							<div class="project-tags">
								{project.techStack
									.slice(0, 3)
									.map((tag: string) => (
										<span class="tech-tag">
											<Icon
												name={getTechIcon(tag)}
												class="tech-tag-icon"
											/>
											{tag}
										</span>
									))}
							</div>
						</div>
					</a>
				))
			}
		</div>
		<!-- <p class="disclaimer-text">
			*Nota: Algunos de estos proyectos fueron liderados por nuestros
			fundadores antes de la creación de Zutra. Si deseas referencias, con
			gusto te conectaremos con los líderes que supervisaron estas
			iniciativas.
		</p> -->
	</div>
</section>

<style>
	.portfolio-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 2.5rem;
		margin-top: 3rem;
	}

	.project-card {
		display: flex;
		flex-direction: column;
		text-decoration: none;
	}

	.project-image-wrapper {
		position: relative;
		border-radius: var(--radius-lg);
		overflow: hidden;
		margin-bottom: 1.5rem;
		aspect-ratio: 4/3;
		background-color: var(--color-subtle);
		border: 1px solid var(--color-line);
	}

	.project-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
	}

	.project-card:hover .project-image {
		transform: scale(1.05);
	}

	.project-overlay {
		position: absolute;
		inset: 0;
		background-color: rgba(0, 0, 0, 0.4);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.project-card:hover .project-overlay {
		opacity: 1;
	}

	.view-project-btn {
		background-color: var(--color-surface);
		color: var(--color-secondary);
		padding: 0.75rem 1.5rem;
		border-radius: var(--radius-2xl);
		font-weight: 700;
		display: flex;
		gap: 0.5rem;
		align-items: center;
		transform: translateY(10px);
		transition: transform 0.3s ease;
	}

	.project-card:hover .view-project-btn {
		transform: translateY(0);
	}

	.project-content {
		display: flex;
		flex-direction: column;
	}

	.project-meta {
		display: flex;
		justify-content: space-between;
		margin-bottom: 0.5rem;
		font-size: 0.825rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.project-industry {
		color: var(--color-accent);
	}

	.project-year {
		color: var(--color-muted);
	}

	.project-title {
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--color-secondary);
		margin: 0.25rem 0 0.75rem;
		transition: color 0.2s;
	}

	.project-card:hover .project-title {
		color: var(--color-accent);
	}

	.project-desc {
		font-size: 0.95rem;
		color: var(--color-muted);
		line-height: 1.5;
		margin-bottom: 1.25rem;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.project-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.tech-tag {
		font-size: 0.75rem;
		padding: 0.25rem 0.6rem;
		background-color: var(--color-subtle);
		border-radius: var(--radius-sm);
		color: var(--color-muted);
		font-weight: 500;
		display: flex;
		align-items: center;
		gap: 0.4rem;
	}

	.tech-tag-icon {
		font-size: 0.9rem;
		color: var(--color-accent);
	}

	.disclaimer-text {
		margin-top: 4rem;
		text-align: center;
		font-size: 0.8rem;
		color: var(--color-muted);
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
		font-style: italic;
		line-height: 1.6;
		opacity: 0.7;
	}

	@media (max-width: 640px) {
		.portfolio-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}
		.project-title {
			font-size: 1.25rem;
		}
	}
</style>
