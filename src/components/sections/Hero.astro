---
import { Image } from "astro:assets";

import { heroSlides } from "../../data/hero";
---

<section id="hero" class="hero-carousel">
  <div class="hero-carousel__slides-container">
    {
      heroSlides.map((slide, index) => (
        <div
          class={`hero-carousel__slide ${index === 0 ? "active" : ""}`}
          data-slide-index={index}
        >
          <div class="container hero-carousel__slide-inner">
            <div class="hero-carousel__text-content">
              <h1 class="hero__title" set:html={slide.title} />
              <p class="hero__subtitle">{slide.subtitle}</p>
              <div class="hero__actions">
                <a href={slide.buttonLink} class="button button--primary">
                  {slide.buttonText}
                </a>
              </div>
            </div>
            <div class="hero-carousel__image-content">
              <div class="hero-carousel__image-wrapper">
                <svg
                  class="hero-carousel__blob-background"
                  viewBox="0 0 390.49 363.11"
                >
                  <path
                    fill="var(--color-accent)"
                    d="M390.49,181.55c0,152.14-48.18,181.55-195.24,181.55S0,333.7,0,181.55,48.18,0,195.25,0s195.24,29.41,195.24,181.55Z"
                  />
                </svg>
                <Image
                  src={slide.image}
                  alt={slide.imageAlt}
                  class="hero-carousel__photo"
                  loading={index === 0 ? "eager" : "lazy"}
                  decoding={index === 0 ? "auto" : "async"}
                />
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <button
    class="hero-carousel__nav-button hero-carousel__nav-button--prev"
    aria-label="Slide anterior"><i class="ph ph-caret-left"></i></button
  >
  <button
    class="hero-carousel__nav-button hero-carousel__nav-button--next"
    aria-label="Siguiente slide"
    ><i class="ph ph-caret-right"></i></button
  >
  <div class="hero-carousel__pagination">
    {
      heroSlides.map((_, index) => (
        <button
          class={`hero-carousel__dot ${index === 0 ? "active" : ""}`}
          data-slide-to={index}
          aria-label={`Ir al slide ${index + 1}`}
        />
      ))
    }
  </div>
</section>

<style>
  .hero-carousel {
    --header-offset: 4rem;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    width: 100%;
    margin-top: var(--header-offset);
    padding: 4rem 0;
    min-height: calc(90vh - var(--header-offset));
    max-height: 800px;
    height: auto;
  }

  .hero-carousel__slides-container {
    display: grid;
    width: 100%;
  }

  .hero-carousel__slide {
    grid-area: 1 / 1;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.6s ease-in-out,
      transform 0.6s ease-in-out;
    transform: translateY(1rem);
  }

  .hero-carousel__slide.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    z-index: 1;
  }

  .hero-carousel__slide-inner {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  .hero-carousel__text-content {
    order: 2;
  }

  .hero__title {
    font-size: clamp(2rem, 8vw, 2.5rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.025em;
    margin: 0;
    color: var(--color-secondary);
  }

  .hero__title :global(.accent-text) {
    color: var(--color-accent);
    filter: brightness(0.9);
  }

  :global([data-theme="dark"]) .hero__title :global(.accent-text) {
    filter: brightness(1.2);
  }

  .hero__subtitle {
    margin: 1rem auto 0;
    font-size: 1.125rem;
    color: var(--color-muted);
    max-width: 45ch;
  }

  .hero__actions {
    margin-top: 1.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .hero-carousel__image-content {
    order: 1;
  }

  .hero-carousel__image-wrapper {
    position: relative;
    width: 100%;
    max-width: 280px;
    margin: 0 auto;
  }

  .hero-carousel__blob-background {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    z-index: 1;
    opacity: 0.9;
  }

  .hero-carousel__photo {
    position: relative;
    z-index: 2;
    width: 90%;
    height: auto;
    object-fit: cover;
    border-radius: var(--radius-lg);
  }

  .hero-carousel__pagination {
    position: absolute;
    bottom: 5.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    display: flex;
    gap: 0.75rem;
  }

  .hero-carousel__dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: var(--radius-full);
    background-color: var(--color-line);
    border: none;
    padding: 0;
    cursor: pointer;
    transition:
      background-color 0.3s,
      transform 0.3s;
  }

  .hero-carousel__dot:hover {
    background-color: var(--color-muted);
  }

  .hero-carousel__dot.active {
    background-color: var(--color-accent);
    transform: scale(1.2);
  }

  .hero-carousel__nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background-color: hsla(0, 0%, 100%, 0.1);
    border: 1px solid var(--color-line);
    color: var(--color-secondary);
    border-radius: var(--radius-full);
    width: 2.75rem;
    height: 2.75rem;
    display: none;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 1.5rem;
    transition:
      background-color 0.2s,
      border-color 0.2s;
  }

  .hero-carousel__nav-button:hover {
    background-color: hsla(0, 0%, 100%, 0.2);
    border-color: var(--color-accent);
  }

  .hero-carousel__nav-button--prev {
    left: 1.5rem;
  }

  .hero-carousel__nav-button--next {
    right: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero-carousel {
      margin-top: 0;
      min-height: 90vh;
      height: 100%;
      max-height: 850px;
    }

    .hero-carousel__slide-inner {
      grid-template-columns: 1fr 1fr;
      text-align: left;
      gap: 3rem;
    }

    .hero-carousel__text-content {
      order: 1;
    }

    .hero-carousel__image-content {
      order: 2;
    }

    .hero__title {
      font-size: clamp(3rem, 10vw, 3.5rem);
    }

    .hero__subtitle {
      margin-inline: 0;
    }

    .hero__actions {
      justify-content: flex-start;
    }

    .hero-carousel__image-wrapper {
      max-width: 450px;
    }

    .hero-carousel__nav-button {
      display: inline-flex;
    }

    .hero-carousel__pagination {
      bottom: 2rem;
    }
  }
</style>
