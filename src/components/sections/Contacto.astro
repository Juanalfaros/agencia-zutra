---
import { socialMedia } from "../../data/socialmedia";
---

<section id="contacto" class="section contacto-section">
  <div class="contacto-glow"></div>

  <div class="container relative">
    <div class="contacto-grid">
      <div class="contacto-info">
        <div class="section-badge">Contacto</div>
        <h2 class="contacto-title">
          ¿Listos para <span class="text-accent">ir a todas?</span>
        </h2>
        <p class="contacto-subtitle">
          Agenda tu auditoría gratuita. Si no te entregamos claridad y próximos
          pasos accionables, no seguimos. <strong>Así de simple</strong>.
        </p>

        <div class="contacto-details">
          <a href="mailto:hola@zutra.agency" class="detail-item">
            <div class="detail-icon">
              <i class="ph-duotone ph-envelope-simple"></i>
            </div>
            <div class="detail-text">
              <span class="detail-label">Escríbenos</span>
              <span class="detail-value">hola@zutra.agency</span>
            </div>
          </a>

          <div class="detail-item">
            <div class="detail-icon">
              <i class="ph-duotone ph-map-pin"></i>
            </div>
            <div class="detail-text">
              <span class="detail-label">Operación</span>
              <span class="detail-value">Remoto / Global</span>
            </div>
          </div>
        </div>

        <div class="social-links-container">
          <p class="social-label">Síguenos</p>
          <div class="social-links">
            {
              socialMedia.map((social) => (
                <a
                  href={social.url}
                  class="social-link"
                  aria-label={social.ariaLabel}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class={social.icon} />
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <div class="form-wrapper">
        <form id="contact-form" class="contact-form" novalidate>
          <div class="form-grid">
            <div class="form-group">
              <label for="name" class="form-label">Nombre completo</label>
              <div class="input-wrapper">
                <i class="ph-duotone ph-user"></i>
                <input
                  id="name"
                  name="name"
                  type="text"
                  placeholder="Tu nombre"
                  autocomplete="name"
                  required
                  class="form-input"
                />
              </div>
              <p id="err-name" class="form-error hidden">Ingresa tu nombre.</p>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Correo electrónico</label>
              <div class="input-wrapper">
                <i class="ph-duotone ph-envelope"></i>
                <input
                  id="email"
                  name="email"
                  type="email"
                  placeholder="hola@ejemplo.com"
                  inputmode="email"
                  autocomplete="email"
                  required
                  class="form-input"
                />
              </div>
              <p id="err-email" class="form-error hidden">
                Ingresa un correo válido.
              </p>
            </div>
          </div>

          <div class="form-group">
            <label for="message" class="form-label">¿En qué te ayudamos?</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              placeholder="Cuéntanos brevemente qué necesitas. (Ej: 'Necesito una web nueva', 'Quiero mejorar mis correos', 'Busco soporte mensual'...)"
              required
              class="form-input"></textarea>
            <p id="err-message" class="form-error hidden">
              Cuéntanos brevemente qué necesitas.
            </p>
          </div>

          <div class="form-consent-group">
            <label class="checkbox-container">
              <input id="consent" name="consent" type="checkbox" required />
              <span class="checkmark"></span>
              <span class="form-consent-label"
                >Acepto ser contactad@ por el equipo de Zutra.
              </span>
            </label>
            <p id="err-consent" class="form-error hidden">
              Debes aceptar para continuar.
            </p>
          </div>

          <button
            id="submit-button"
            type="submit"
            data-track="cta_contacto_submit"
            class="button button--primary button--full-width button--large"
          >
            <span>Enviar mensaje</span>
            <i class="ph-duotone ph-paper-plane-tilt"></i>
          </button>

          <p id="form-status" class="form-status hidden"></p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const statusMsg = document.getElementById("form-status");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      let isValid = true;

      document
        .querySelectorAll(".form-error")
        .forEach((el) => el.classList.add("hidden"));
      statusMsg?.classList.add("hidden");

      const nameInput = document.getElementById("name") as HTMLInputElement;
      if (!nameInput.value.trim()) {
        document.getElementById("err-name")?.classList.remove("hidden");
        isValid = false;
      }

      const emailInput = document.getElementById("email") as HTMLInputElement;
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(emailInput.value)) {
        document.getElementById("err-email")?.classList.remove("hidden");
        isValid = false;
      }

      const msgInput = document.getElementById(
        "message",
      ) as HTMLTextAreaElement;
      if (!msgInput.value.trim()) {
        document.getElementById("err-message")?.classList.remove("hidden");
        isValid = false;
      }

      const consentInput = document.getElementById(
        "consent",
      ) as HTMLInputElement;
      if (!consentInput.checked) {
        document.getElementById("err-consent")?.classList.remove("hidden");
        isValid = false;
      }

      if (isValid) {
        const btn = document.getElementById(
          "submit-button",
        ) as HTMLButtonElement;
        const originalText = btn.innerHTML;

        btn.disabled = true;
        btn.innerHTML = `<span>Enviando...</span> <i class="ph-duotone ph-spinner ph-spin"></i>`;

        setTimeout(() => {
          btn.innerHTML = `<span>¡Mensaje Enviado!</span> <i class="ph-duotone ph-check"></i>`;
          btn.classList.add("success");
          form.reset();

          setTimeout(() => {
            btn.disabled = false;
            btn.innerHTML = originalText;
            btn.classList.remove("success");
          }, 3000);
        }, 1500);
      }
    });
  }
</script>

<style>
  /* --- LAYOUT GENERAL --- */
  .contacto-section {
    position: relative;
    padding: 6rem 0;
    overflow: hidden;
  }

  .contacto-glow {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    width: 500px;
    height: 500px;
    background: radial-gradient(
      circle,
      rgba(var(--color-accent-rgb, 255, 255, 255), 0.1) 0%,
      transparent 70%
    );
    z-index: 0;
    pointer-events: none;
    filter: blur(100px);
  }

  .relative {
    position: relative;
    z-index: 1;
  }

  .contacto-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: start;
  }

  /* --- COLUMNA IZQUIERDA (INFO) --- */
  .section-badge {
    display: inline-block;
    padding: 0.35rem 0.85rem;
    background: var(--color-accent-subtle);
    color: var(--color-accent);
    border: 1px solid var(--color-accent-subtle);
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }

  .contacto-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1rem;
    color: var(--color-secondary);
  }

  .text-accent {
    color: var(--color-accent);
  }

  .contacto-subtitle {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-muted);
    max-width: 45ch;
    margin-bottom: 3rem;
  }

  .contacto-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  .detail-item:hover {
    transform: translateX(5px);
  }

  .detail-icon {
    width: 3rem;
    height: 3rem;
    background: var(--color-subtle);
    border: 1px solid var(--color-line);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--color-accent);
    transition: all 0.2s ease;
  }

  .detail-item:hover .detail-icon {
    background: var(--color-accent);
    color: var(--color-on-accent);
    border-color: var(--color-accent);
  }

  .detail-text {
    display: flex;
    flex-direction: column;
  }

  .detail-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    font-weight: 700;
  }

  .detail-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
  }

  /* Redes Sociales */
  .social-links-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-label {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--color-subtle);
    border: 1px solid var(--color-line);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    color: var(--color-muted);
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--color-secondary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  /* --- COLUMNA DERECHA (FORMULARIO) --- */
  .form-wrapper {
    background-color: var(--color-surface);
    border: 1px solid var(--color-line);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-text);
    margin-left: 0.25rem;
  }

  /* Estilos de Inputs */
  .input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .input-wrapper i {
    position: absolute;
    left: 1rem;
    color: var(--color-muted);
    font-size: 1.25rem;
    pointer-events: none;
    transition: color 0.3s ease;
    z-index: 2;
  }

  .form-input {
    width: 100%;
    background-color: var(--color-subtle);
    border: 1px solid var(--color-line);
    border-radius: 12px;
    padding: 0.875rem 1rem;
    color: var(--color-secondary);
    font-family: inherit;
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }

  .input-wrapper .form-input {
    padding-left: 3rem; /* Espacio para el icono */
  }

  textarea.form-input {
    resize: vertical;
    min-height: 120px;
    line-height: 1.5;
  }

  .form-input:hover {
    border-color: rgba(255, 255, 255, 0.2);
    background-color: rgba(255, 255, 255, 0.05);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-accent);
    background-color: rgba(255, 255, 255, 0.07);
    box-shadow: 0 0 0 1px var(--color-accent);
  }

  .form-input:focus + i,
  .input-wrapper:focus-within i {
    color: var(--color-accent);
  }

  /* Errores */
  .hidden {
    display: none !important;
  }

  .form-error {
    font-size: 0.75rem;
    color: #ef4444;
    margin-left: 0.25rem;
    margin-top: 0.25rem;
  }

  /* Checkbox Custom */
  .checkbox-container {
    display: flex;
    gap: 0.75rem;
    cursor: pointer;
    align-items: flex-start;
  }

  .checkbox-container input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .checkmark {
    width: 1.25rem;
    height: 1.25rem;
    border: 1px solid var(--color-line);
    border-radius: 4px;
    background: var(--color-subtle);
    flex-shrink: 0;
    position: relative;
    transition: all 0.2s;
    margin-top: 2px;
  }

  .checkbox-container input:checked ~ .checkmark {
    background: var(--color-accent);
    border-color: var(--color-accent);
  }

  /* Icono del check */
  .checkmark:after {
    content: "";
    position: absolute;
    display: none;
    left: 6px;
    top: 2px;
    width: 5px;
    height: 10px;
    border: solid var(--color-on-accent);
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }

  .checkbox-container input:checked ~ .checkmark:after {
    display: block;
  }

  .form-consent-label {
    font-size: 0.85rem;
    color: var(--color-muted);
    line-height: 1.4;
  }

  .form-consent-label a {
    color: var(--color-text);
    text-decoration: underline;
  }

  /* Botón */
  .button--large {
    width: 100%;
    padding: 1rem;
    font-size: 1rem;
    font-weight: 700;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    background-color: var(--color-accent);
    color: var(--color-on-accent);
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition:
      transform 0.2s ease,
      opacity 0.2s;
  }

  .button--large:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .button--large:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }

  .button--large.success {
    background-color: #10b981; /* Verde éxito */
    color: #fff;
  }

  .form-status {
    text-align: center;
    font-size: 0.9rem;
    margin-top: 1rem;
    color: var(--color-text);
  }

  /* Responsive */
  @media (min-width: 1024px) {
    .contacto-grid {
      grid-template-columns: 1fr 1fr;
      gap: 6rem;
    }

    .form-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 768px) {
    .contacto-section {
      padding: 4rem 0;
    }

    .contacto-title {
      font-size: 2.5rem;
    }

    .form-wrapper {
      padding: 1.5rem;
    }
  }
</style>
