---
import { plans, tableRows } from "../../data/planes";
---

<section id="planes" class="section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Elige cómo empezamos</h2>
      <p class="section-subtitle">
        Sprints cerrados o acompañamiento mensual. <strong
          >Sin permanencia forzada</strong
        >.
      </p>
    </div>
    
    <div class="plans-grid">
      {
        plans.map((plan) => (
          <div
            class={`plan-card ${plan.recommended ? "plan-card--recommended" : ""}`}
          >
            {plan.recommended && (
              <span class="plan-card__badge">{plan.badge}</span>
            )}
            <div class="plan-card__header">
              <h3 class="plan-card__title">{plan.title}</h3>
              <p class="plan-card__meta">{plan.meta}</p>
              <p class="plan-card__price">
                {plan.price} <span class="price__meta">{plan.priceMeta}</span>
              </p>
            </div>
            <ul class="plan-card__list">
              {plan.features.map((feature) => (
                <li class="card__list-item">
                  <i class="ph-duotone ph-check-circle" />
                  {feature}
                </li>
              ))}
            </ul>
            <a
              href="#contacto"
              data-track="plan_click"
              data-plan={plan.planId}
              class="plan-card__cta button button--primary"
            >
              {plan.ctaText}
            </a>
          </div>
        ))
      }
    </div>

    <div class="plans-table-wrapper">
      <table class="plans-table">
        <thead>
          <tr>
            <th>Incluye</th>
            <th>Sprint de Leads</th>
            <th>Partner Digital</th>
            <th>Email Revenue</th>
          </tr>
        </thead>
        <tbody>
          {
            tableRows.map((row) => (
              <tr>
                <td data-label="Incluye">{row.label}</td>
                
                {/* Columna Sprint */}
                <td data-label="Sprint de Leads">
                  {row.sprint === "✔" ? (
                    <i
                      class="ph-duotone ph-check-circle"
                      style="color: var(--color-accent); font-size: 1.25rem;"
                    />
                  ) : row.sprint.includes("✔") ? (
                    <>
                      <i
                        class="ph-duotone ph-check-circle"
                        style="color: var(--color-accent); font-size: 1rem;"
                      />{" "}
                      {row.sprint.replace("✔", "").trim()}
                    </>
                  ) : (
                    row.sprint
                  )}
                </td>

                {/* Columna Partner (Antes Monthly) */}
                <td data-label="Partner Digital">
                  {row.partner === "✔" ? (
                    <i
                      class="ph-duotone ph-check-circle"
                      style="color: var(--color-accent); font-size: 1.25rem;"
                    />
                  ) : row.partner.includes("✔") ? (
                    <>
                      <i
                        class="ph-duotone ph-check-circle"
                        style="color: var(--color-accent); font-size: 1rem;"
                      />{" "}
                      {row.partner.replace("✔", "").trim()}
                    </>
                  ) : (
                    row.partner
                  )}
                </td>

                {/* Columna Email (Antes Support) */}
                <td data-label="Email Revenue">
                  {row.email === "✔" ? (
                    <i
                      class="ph-duotone ph-check-circle"
                      style="color: var(--color-accent); font-size: 1.25rem;"
                    />
                  ) : row.email.includes("✔") ? (
                    <>
                      <i
                        class="ph-duotone ph-check-circle"
                        style="color: var(--color-accent); font-size: 1rem;"
                      />{" "}
                      {row.email.replace("✔", "").trim()}
                    </>
                  ) : (
                    row.email
                  )}
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
  .plans-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .plan-card {
    border: 1px solid var(--color-line);
    border-radius: var(--radius-lg);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    position: relative;
    transition: transform 0.3s ease;
  }

  .plan-card:hover {
    transform: translateY(-4px);
  }

  .plan-card--recommended {
    border: 2px solid var(--color-accent);
  }

  .plan-card__badge {
    position: absolute;
    top: -0.75rem;
    left: 1.5rem;
    background-color: var(--color-accent);
    color: var(--color-on-accent);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 800;
  }

  .plan-card__header {
    margin-bottom: 2rem;
  }

  .plan-card__title {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0;
    color: var(--color-secondary);
  }

  .plan-card__meta {
    font-size: 0.875rem;
    color: var(--color-muted);
    margin-top: 0.5rem;
  }

  .plan-card__price {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-accent);
    margin: 1.5rem 0 0;
  }

  .price__meta {
    font-size: 0.875rem;
    color: var(--color-muted);
    font-weight: normal;
  }

  .plan-card__list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
  }

  .card__list-item {
    display: flex;
    gap: 0.75rem;
    color: var(--color-gray-300);
    font-size: 0.95rem;
  }

  .card__list-item i {
    color: var(--color-accent);
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .plan-card__cta {
    margin-top: 2rem;
    width: 100%;
    text-align: center;
  }

  .plans-table-wrapper {
    margin-top: 4rem;
    overflow-x: auto;
    background-color: var(--color-subtle);
    border: 1px solid var(--color-line);
    border-radius: var(--radius-lg);
    padding: 1px;
  }

  .plans-table {
    width: 100%;
    min-width: 700px;
    border-collapse: collapse;
    font-size: 0.95rem;
  }

  .plans-table th,
  .plans-table td {
    padding: 1.25rem;
    text-align: left;
    border-bottom: 1px solid var(--color-line);
  }

  .plans-table th {
    font-weight: 800;
    color: var(--color-secondary);
  }

  .plans-table tr:last-child td {
    border-bottom: none;
  }

  .plans-table tbody tr:hover {
    background-color: rgba(255, 255, 255, 0.02);
  }

  @media (min-width: 1024px) {
    .plans-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 767px) {
    .plans-table td::before {
      content: attr(data-label);
      font-weight: 700;
      display: block;
      margin-bottom: 0.5rem;
      color: var(--color-accent);
    }
  }
</style>