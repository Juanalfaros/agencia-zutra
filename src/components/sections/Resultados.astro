---
import { results } from "../../data/resultados";
---

<section id="resultados" class="section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Resultados que hablan por nosotros</h2>
      <p class="section-subtitle">
        Logros clave de proyectos liderados por nuestros fundadores antes de
        Zutra. Esta es la experiencia que ponemos a tu servicio.
      </p>
    </div>
    <div class="results-grid">
      {
        results.map((result) => (
          <article class="result-card">
            <div class="card__header">
              <i class={result.icon} />
              <p class="card__project">{result.project}</p>
            </div>
            <h3 class="card__achievement">{result.achievement}</h3>
            <p class="card__context" set:html={result.context} />
            <div class="card__footer">
              <p class="card__attribution">{result.attribution}</p>
            </div>
          </article>
        ))
      }
    </div>
    <div class="section-cta">
      <a
        href="#contacto"
        data-track="cta_resultados_click"
        data-loc="resultados"
        class="button button--primary button--icon-right"
      >
        Quiero resultados as√≠ <i class="ph-duotone ph-arrow-right"></i>
      </a>
    </div>
  </div>
</section>

<style>
  .results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
  }

  .result-card {
    border: 1px solid var(--color-line);
    border-radius: var(--radius-md);
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    text-align: left;
    transition: transform 0.3s ease;
  }

  .result-card:hover {
    transform: translateY(-4px);
  }

  .card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .card__header i {
    font-size: 1.5rem;
    color: var(--color-accent);
  }

  .card__project {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--color-secondary);
    opacity: 0.8;
  }

  .card__achievement {
    font-size: 1.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin: 0 0 0.75rem 0;
    color: var(--color-accent);
  }

  .card__context {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-muted);
    margin: 0;
    flex-grow: 1;
  }

  .card__context :global(strong) {
    color: var(--color-secondary);
  }

  .card__footer {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-line);
  }

  .card__attribution {
    margin: 0;
    font-size: 0.75rem;
    color: var(--color-muted);
    font-style: italic;
  }

  @media (min-width: 768px) {
    .results-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
