---
// src/components/blog/BlogCard.astro
import type { Post } from "@/types/blog-types";
import { Image } from "astro:assets";

interface Props {
    post: Post;
    featured?: boolean;
}

const { post, featured = false } = Astro.props;
---

<a
    href={`/blog/${post.slug}`}
    class={`blog-card ${featured ? "blog-card--featured" : ""}`}
>
    <div class="card__image-container">
        <img
            src={post.image}
            alt={post.title}
            class="card__image"
            loading="lazy"
            transition:name={`image-${post.slug}`}
        />
        <span class="card__category">{post.category}</span>
    </div>

    <div class="card__content">
        <div class="card__meta">
            <span class="card__date">{post.publishDate}</span>
            <span class="card__dot">•</span>
            <span class="card__time">{post.readingTime}</span>
        </div>

        <h3 class="card__title" transition:name={`title-${post.slug}`}>
            {post.title}
        </h3>
        <p class="card__excerpt">{post.excerpt}</p>

        <div class="card__footer">
            <div class="card__author">
                <Image
                    src={post.author.avatar as any}
                    alt={post.author.name}
                    class="author__avatar"
                    width={40}
                    height={40}
                />
                <span class="author__name">{post.author.name}</span>
            </div>
            <span class="card__read-more"
                >Leer más <i class="ph-duotone ph-arrow-right"></i></span
            >
        </div>
    </div>
</a>

<style>
    .blog-card {
        display: flex;
        flex-direction: column;
        background: var(--color-surface);
        border: 1px solid var(--color-line);
        border-radius: var(--radius-xl);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        height: 100%;
        text-decoration: none;
        color: inherit;
    }

    .blog-card:hover {
        transform: translateY(-8px);
        border-color: var(--color-accent);
    }

    .card__image-container {
        position: relative;
        aspect-ratio: 16 / 9;
        overflow: hidden;
    }

    .blog-card--featured .card__image-container {
        aspect-ratio: 21 / 9;
    }

    .card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .blog-card:hover .card__image {
        transform: scale(1.05);
    }

    .card__category {
        position: absolute;
        top: 1.25rem;
        left: 1.25rem;
        background: var(--color-accent);
        color: var(--color-on-accent, #000);
        padding: 0.35rem 0.85rem;
        border-radius: var(--radius-full);
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        z-index: 2;
    }

    .card__content {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .card__meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: var(--color-muted);
        margin-bottom: 1rem;
    }

    .card__title {
        font-size: 1.5rem;
        font-weight: 800;
        line-height: 1.2;
        margin: 0 0 1rem 0;
        color: var(--color-secondary);
        transition: color 0.3s;
    }

    .blog-card:hover .card__title {
        color: var(--color-accent);
    }

    .card__excerpt {
        font-size: 0.95rem;
        color: var(--color-muted);
        line-height: 1.6;
        margin: 0 0 2rem 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card__footer {
        margin-top: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-line);
    }

    .card__author {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .author__avatar {
        width: 2rem;
        height: 2rem;
        border-radius: var(--radius-full);
        background: var(--color-line);
    }

    .author__name {
        font-size: 0.9rem;
        font-weight: 700;
        color: var(--color-secondary);
    }

    .card__read-more {
        font-size: 0.85rem;
        font-weight: 800;
        color: var(--color-accent);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: transform 0.3s;
    }

    .blog-card:hover .card__read-more {
        transform: translateX(4px);
    }

    @media (max-width: 768px) {
        .blog-card--featured .card__image-container {
            aspect-ratio: 16 / 9;
        }
    }
</style>
