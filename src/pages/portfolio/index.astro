---
import Layout from "../../layouts/Layout.astro";
import StickyCTA from "../../components/common/StickyCTA.astro";
import { getEntries } from "@/lib/contentful";
import { adaptPortfolioCase } from "@/lib/contentful-adapters";
import type { ZutraCaseStudy } from "@/types/project-types";
import { Image } from "astro:assets";
import { slugify } from "@/lib/slugify.js";
import { Icon } from "astro-icon/components";
import { getTechIcon } from "../../data/techIcons";

// Fetch portfolio cases from Contentful
const entries = await getEntries("portfolioCase", {
    order: "fields.order",
});
const cases = entries.items.map(adaptPortfolioCase);

// Handle case when no cases are available (Contentful not configured)
const hasCases = cases.length > 0;

// Derive unique industries
const allIndustries = hasCases
    ? [...new Set(cases.map((c) => c.industry))].sort()
    : [];

const title = "Portfolio — Agencia Zutra";
const description =
    "Nuestros casos de éxito. Estrategia, diseño y métricas reales.";
---

<Layout title={title} description={description} image="/og-portfolio.jpg">
    <main class="portfolio-page">
        <section class="portfolio-hero">
            <div class="container">
                <h1 class="portfolio-title">
                    Hacemos que las cosas <span class="text-accent">pasen</span
                    >.
                </h1>
                <p class="portfolio-subtitle">
                    Resultados medibles, diseño con propósito y código
                    impecable. Aquí está la prueba.
                </p>

                <div class="filter-bar">
                    <!-- Placeholder para futuros filtros dinámicos -->
                    <span class="filter-label">Explora por industria:</span>
                    <div class="filter-tags">
                        {
                            hasCases ? (
                                (allIndustries as string[]).map(
                                    (ind: string) => (
                                        <a
                                            href={`/portfolio/tag/${slugify(ind)}`}
                                            class="filter-tag"
                                        >
                                            {ind}
                                        </a>
                                    ),
                                )
                            ) : (
                                <span class="no-cases">
                                    No hay industrias disponibles
                                </span>
                            )
                        }
                    </div>
                </div>
            </div>
        </section>

        <section class="portfolio-grid-section">
            <div class="container">
                <div class="portfolio-grid">
                    {
                        hasCases ? (
                            cases.map((project: ZutraCaseStudy) => (
                                <a
                                    href={`/portfolio/${project.slug}`}
                                    class="project-card"
                                >
                                    <div class="project-image-wrapper">
                                        <Image
                                            src={project.featuredImage.src}
                                            alt={project.title}
                                            width={800}
                                            height={600}
                                            class="project-image"
                                            transition:name={`image-${project.slug}`}
                                        />
                                        <div class="project-overlay">
                                            <span class="view-project-btn">
                                                Ver Caso{" "}
                                                <i class="ph-duotone ph-arrow-right" />
                                            </span>
                                        </div>
                                    </div>
                                    <div class="project-content">
                                        <div class="project-meta">
                                            <span class="project-industry">
                                                {project.industry}
                                            </span>
                                            <span class="project-year">
                                                {project.year}
                                            </span>
                                        </div>
                                        <h3
                                            class="project-title"
                                            transition:name={`title-${project.slug}`}
                                        >
                                            {project.title}
                                        </h3>
                                        <p class="project-desc">
                                            {project.description}
                                        </p>
                                        <div class="project-tags">
                                            {project.techStack
                                                .slice(0, 3)
                                                .map((tag: string) => (
                                                    <span class="tech-tag">
                                                        <Icon
                                                            name={getTechIcon(
                                                                tag,
                                                            )}
                                                            class="tech-tag-icon"
                                                        />
                                                        {tag}
                                                    </span>
                                                ))}
                                        </div>
                                    </div>
                                </a>
                            ))
                        ) : (
                            <div class="no-cases">
                                <p>
                                    No hay casos de estudio disponibles en este
                                    momento.
                                </p>
                            </div>
                        )
                    }
                </div>
            </div>
        </section>

        <StickyCTA />
    </main>
</Layout>

<style>
    .portfolio-page {
        padding-top: 5rem;
    }

    .portfolio-hero {
        padding: 6rem 0 4rem;
        text-align: center;
    }

    .portfolio-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        color: var(--color-secondary);
    }

    .text-accent {
        color: var(--color-accent);
    }

    .no-cases {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--color-muted);
        font-size: 1.1rem;
        grid-column: 1 / -1;
    }

    .portfolio-subtitle {
        font-size: 1.25rem;
        color: var(--color-muted);
        max-width: 600px;
        margin: 0 auto 3rem;
    }

    .filter-bar {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .filter-label {
        font-size: 0.875rem;
        color: var(--color-muted);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .filter-tags {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.75rem;
    }

    .filter-tag {
        padding: 0.5rem 1rem;
        border: 1px solid var(--color-line);
        border-radius: var(--radius-2xl);
        font-size: 0.875rem;
        color: var(--color-secondary);
        font-weight: 500;
        cursor: default; /* Por ahora estático */
        transition: all 0.2s;
    }

    .filter-tag:hover {
        border-color: var(--color-accent);
        color: var(--color-accent);
    }

    .portfolio-grid-section {
        padding: 3rem 0 6rem;
    }

    .portfolio-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2.5rem;
    }

    .project-card {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        group: project-card;
    }

    .project-image-wrapper {
        position: relative;
        border-radius: var(--radius-lg);
        overflow: hidden;
        margin-bottom: 1.5rem;
        aspect-ratio: 4/3;
        background-color: var(--color-subtle);
        border: 1px solid var(--color-line);
    }

    .project-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    }

    .project-card:hover .project-image {
        transform: scale(1.05);
    }

    .project-overlay {
        position: absolute;
        inset: 0;
        background-color: rgba(0, 0, 0, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .project-card:hover .project-overlay {
        opacity: 1;
    }

    .view-project-btn {
        background-color: var(--color-surface);
        color: var(--color-secondary);
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-2xl);
        font-weight: 700;
        display: flex;
        gap: 0.5rem;
        align-items: center;
        transform: translateY(10px);
        transition: transform 0.3s ease;
    }

    .project-card:hover .view-project-btn {
        transform: translateY(0);
    }

    .project-content {
        display: flex;
        flex-direction: column;
    }

    .project-meta {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.825rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .project-industry {
        color: var(--color-accent);
    }

    .project-year {
        color: var(--color-muted);
    }

    .project-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--color-secondary);
        margin: 0.25rem 0 0.75rem;
        transition: color 0.2s;
    }

    .project-card:hover .project-title {
        color: var(--color-accent);
    }

    .project-desc {
        font-size: 0.95rem;
        color: var(--color-muted);
        line-height: 1.5;
        margin-bottom: 1.25rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .project-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tech-tag {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
        background-color: var(--color-subtle);
        border-radius: var(--radius-sm);
        color: var(--color-muted);
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .tech-tag-icon {
        font-size: 0.9rem;
        color: var(--color-accent);
    }

    @media (max-width: 640px) {
        .portfolio-title {
            font-size: 2.25rem;
        }
        .portfolio-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
